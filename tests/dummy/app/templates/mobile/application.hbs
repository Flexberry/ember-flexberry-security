{{#flexberry-sidebar
  class="inverted vertical main menu"
  settings=(hash
  closable=false
  dimPage=false
  onShow=(action "updateWidth")
  onHidden=(action "updateWidth"))
}}
  <div class="header item">
    <a class="brand" href="#">Flexberry Ember Demo</a>
  </div>
  {{flexberry-sitemap sitemap=sitemap}}
{{/flexberry-sidebar}}
<div id="example-mobile" class="pusher">
  <div class="full height">
    <div class="ui top fixed inverted menu">
      <a {{ action 'toggleSidebarMobile' }} class="launch icon item"><i class="sidebar icon"></i></a>
          <div class="right menu">
            <div style="margin:0.65em;">
              <label style="margin-right: 5px;">
                {{if onlineStatus "Online" "Offline"}}
              </label>
              {{flexberry-checkbox
                class="toggle"
                value=onlineStatus
              }}
            </div>
            <button class="ui button mini {{unless (and onlineStatus (not synchronizes)) 'disabled'}} {{if synchronizes 'loading'}}" {{action 'syncUp'}} style="margin:0.5em;">
              {{t "forms.application.sync-up"}}
            </button>
            <button class="ui button mini" {{action (if login 'logout' 'goToLoginForm')}} style="margin:0.5em;">
              {{t (if login "forms.login.logout" "forms.login.caption")}}
            </button>
          </div>
    </div>
    <div class="flexberry-content ui attached segment">
      {{outlet}}
      {{outlet "modal"}}
    </div>
  </div>
</div>
