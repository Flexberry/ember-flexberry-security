{{#ui-sidebar class="inverted vertical menu" dimPage=false}}
  <div class="header item">
    <a class="brand" href="#">Flexberry Ember Security</a>
  </div>
  {{render "sitemap" sitemap}}
{{/ui-sidebar}}
<div id="example" class="pusher">
  <div class="full height">
    <div class="ui top attached">
      <div class="ui attached menu">
        <div class="ui container">
          <a {{ action 'toggleSidebar' }} title="Menu" class="launch icon item"><i class="sidebar icon"></i></a>
          <div class="right menu">
            <div style="margin:0.65em;">
              {{ui-checkbox
                checked=onlineStatus
                label=(if onlineStatus "Online" "Offline")
                class="toggle"
              }}
            </div>
            <button class="ui basic button mini {{unless (and onlineStatus (not synchronizes)) 'disabled'}} {{if synchronizes 'loading'}}" {{action 'syncUp'}} style="margin:0.5em;">
              {{t "forms.application.sync-up"}}
            </button>
            <button class="ui basic button mini" {{action (if login 'logout' 'goToLoginForm')}} style="margin:0.5em;">
              {{t (if login "forms.login.logout" "forms.login.caption")}}
            </button>
          </div>
        </div>
      </div>
    </div>
    <div class="flexberry-content ui attached segment">
      <div class="ui main container">
        <div class="stackable grid container">
            {{outlet}}
            {{outlet "modal"}}
        </div>
      </div>
    </div>
  </div>
  <div class="ui vertical footer segment">
    <div class="ui container">
      <div class="ui text menu">
      <a class="brand item" href="#">Flexberry PLATFORM</a>
        <div class="right menu">
        </div>
      </div>
    </div>
  </div>
</div>
