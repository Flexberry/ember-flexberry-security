<h3 class="ui header">{{t "forms.i-c-s-soft-s-t-o-r-m-n-e-t-security-link-group-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button type="submit" class="ui button save-button" {{action 'save'}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button type="submit" class="ui button save-del-button" {{action 'delete'}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button type="submit" class="ui button close-button" {{action 'close'}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-c-s-soft-s-t-o-r-m-n-e-t-security-link-group-e.user-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.user
      class=(if (v-get validationObject "model.user" "isInvalid") "error")
      displayAttributeName="name"
      autocomplete=true
      relationName="user"
      projection="RoleOrGroupL"
      title=(t "forms.i-c-s-soft-s-t-o-r-m-n-e-t-security-link-group-e.user-caption")
      readonly=readonly
      componentName="userLookup"
      data-test-i-c-s-soft-s-t-o-r-m-n-e-t-security-link-group-e-user=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "model.user" "message")}}
  </div>

  <div class="field">
    <label>{{t "forms.i-c-s-soft-s-t-o-r-m-n-e-t-security-link-group-e.group-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.group
      class=(if (v-get validationObject "model.group" "isInvalid") "error")
      displayAttributeName="name"
      autocomplete=true
      relationName="group"
      projection="RoleOrGroupL"
      title=(t "forms.i-c-s-soft-s-t-o-r-m-n-e-t-security-link-group-e.group-caption")
      readonly=readonly
      componentName="groupLookup"
      data-test-i-c-s-soft-s-t-o-r-m-n-e-t-security-link-group-e-group=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "model.group" "message")}}
  </div>

</form>